<div class="demo-grid">
	<h1>Responsive Grid Layouts</h1>

	<h2>Legend</h2>
	<table>
		<tbody>
			<tr>
				<th>S</th>
				<td>Small</td>
			</tr>
			<tr>
				<th>M</th>
				<td>Medium</td>
			</tr>
			<tr>
				<th>L</th>
				<td>Large</td>
			</tr>
		</tbody>
	</table>


	<h2><code>.g-layout-1</code>: [S] 100% &nbsp; [M] 50% | 50% &nbsp; [L] 33% | 33% | 33% </h2>
	<div class="g-row g-layout-1">
		<div class="g-col"><span>column 1</span></div>
		<div class="g-col"><span>column 2</span></div>
		<div class="g-col"><span>column 3</span></div>
		<div class="g-col"><span>column 4</span></div>
		<div class="g-col"><span>column 5</span></div>
		<div class="g-col"><span>column 6</span></div>
	</div>


	<h2><code>.g-layout-2</code>: [S] 100% &nbsp; [M] 100% &nbsp; [L] 50% | 50%</h2>
	<div class="g-row g-layout-2">
		<div class="g-col"><span>column 1</span></div>
		<div class="g-col"><span>column 2</span></div>
		<div class="g-col"><span>column 3</span></div>
		<div class="g-col"><span>column 4</span></div>
	</div>


	<h2><code>.g-layout-3</code>: [S] 100% &nbsp; [M] 66% | 33% &nbsp; [L] 66% | 33%</h2>
	<div class="g-row g-layout-3">
		<div class="g-col g-col-1"><span>column 1</span></div>
		<div class="g-col g-col-2"><span>column 2</span></div>
	</div>


	<h2><code>.g-layout-4</code>: [S] 100% &nbsp; [M] 50% | 50% &nbsp; [L] 25% | 25% | 25% | 25%</h2>
	<div class="g-row g-layout-4">
		<div class="g-col"><span>column 1</span></div>
		<div class="g-col"><span>column 2</span></div>
		<div class="g-col"><span>column 3</span></div>
		<div class="g-col"><span>column 4</span></div>
	</div>
</div>
